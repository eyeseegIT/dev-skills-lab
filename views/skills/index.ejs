<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Express-Dev-Skills</title>
</head>
<body>
  <h1>Skills as of <%= date %> </h1>
  <% if(error) { %>
    <h2><%= error %> </h2>
  <% } %> 
  <ul>
    <% skills.forEach(function(skill) { %> 
      <li>
        <form
        action="/skills/<%= skill._id %>?_method=DELETE"
        class="delete-form"
        method="POST"
        >
        <button type="submit">X</button>
      </form> 
        <a href="/skills/<%= skill._id %>"><%= skill.item %> </a> 
        -
        <%= skill.status ? "Beginner" : "Expert" %> 
      </li>
    <% }) %> 
  </ul>
  <a href="/skills/new">Add Skill</a>
  <br>
  <a href="/">Go back</a>
</body>
</html>